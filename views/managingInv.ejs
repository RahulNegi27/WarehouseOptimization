<%- include('partials/header.ejs') %>

<title>Managing Inventory</title>
<link rel="stylesheet" href="/styles/managingInv.css" />
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
/>


<div class="main">
<div class="title">
    <h1>Managing Inventory <%= warehouseName %> </h1>
    <img src="images/arrowBlue.png" alt="">
</div>
<div class="content">
    <p>This allows users to <span>add new products</span> with attributes like size, weight, and priority, and automatically assigns them to optimal bins using the Knapsack algorithm. Users can also <span>search for a product </span>by ID to <span>instantly retrieve</span> its storage location and view a real-time product list with bin details.</p>
</div>
<div class="buttons">
    <button id="AddProduct">+ ADD PRODUCT</button>
    <button id="RetrieveProduct"> - RETRIVE PRODUCT</button>
</div>
<div class="AddLists">
    <a href="/product">See Product List</a>
</div>




 


<!-- --------------------------------------------------- -->


<div class="popupMenu AddItems">
    <div class="leftSSection">
      <div class="titlee">
        <h1>Add Product</h1>
       
      </div>
      <div class="form">
        <div class="inputs">
          <label>Product Name:</label>
          <input type="text" id="ProductName">
        </div>
        <div class="inputs">
          <label>Quantity:</label>
          <input type="number" id="quant">
        </div>
        <div class="inputs">
          <label>Size (Volume):</label>
          <input type="number" id="size">
        </div>
        <div class="inputs">
          <label>Priority:</label>
          <select id="priority">
            <option value="High">High</option>
            <option value="Normal">Medium</option>
            <option value="Low">Low</option>
          </select>
        </div>
        <div class="inputs">
          <label>Weight:</label>
          <input type="number" id="weight">
        </div>
        <button type="button" onclick="addToList()">Add to List</button>
      </div>
    </div>

    <div class="rightSection">
      <h1>Product List</h1>
      <div class="lists" id="productList"></div>
      <form action="/submit-batch" method="POST" onsubmit="return submitBatch();">
        <input type="hidden" name="products" id="productsData">
        <button type="submit" class="submit-btn">Submit All to DB</button>
      </form>
    </div>
  </div>


<div class="popupMenu RetrieveItems">
  <div class="titlee">
    <h1>Retrieve Product</h1>
    <img src="images/arrowBlue.png" alt="">
  </div>

  <form action="/retrieve-product" method="POST">
    <input type="text" name="productName" placeholder="Enter Product Name" required>
    <input type="text" name="quannn" placeholder="Enter the Quantity">

    <button id="butto" type="submit">Retrieve Item</button>
  </form>


</div>


<% if (typeof rackName !== 'undefined' && typeof binName !== 'undefined') { %>
<div class="popupMenu ProductFound show" id="aa" style="display: flex;">
  <h1>Item is found at <span>Rack <%= rackName %></span> and <span>Bin <%= binName %></span></h1>
  <button onclick="document.querySelector('.ProductFound').style.display='none'">OK</button>
</div>
<% } %>



  <script src="/styles/nn.js"></script>






<%-include('partials/footer.ejs') %>
